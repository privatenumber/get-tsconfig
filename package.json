{
	"name": "get-tsconfig",
	"version": "0.0.0-semantic-release",
	"description": "Find and/or parse the tsconfig.json file from a file or directory path",
	"keywords": [
		"get-tsconfig",
		"get",
		"typescript",
		"tsconfig",
		"tsconfig.json"
	],
	"license": "MIT",
	"repository": "privatenumber/get-tsconfig",
	"funding": "https://github.com/privatenumber/get-tsconfig?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"lint": "eslint .",
		"build": "tsup src/index.ts --clean --format cjs,esm --dts --minify",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && lint-staged && npm test"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"jest --bail --findRelatedTests"
		]
	},
	"peerDependencies": {
		"typescript": "^4.0.8"
	},
	"dependencies": {
		"aggregate-error": "3.1.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.11.0",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.8",
		"es-jest": "^1.5.0",
		"eslint": "^8.6.0",
		"husky": "^4.3.8",
		"jest": "^27.4.7",
		"lint-staged": "^12.1.7",
		"tsup": "^5.11.11",
		"typescript": "^4.5.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr/eslint-config",
		"ignorePatterns": [
			"tests/fixtures"
		]
	}
}
