{
	"name": "get-tsconfig",
	"version": "0.0.0-semantic-release",
	"description": "Find and parse the tsconfig.json file from a directory path",
	"keywords": [
		"get-tsconfig",
		"get",
		"typescript",
		"tsconfig",
		"tsconfig.json"
	],
	"license": "MIT",
	"repository": "privatenumber/get-tsconfig",
	"funding": "https://github.com/privatenumber/get-tsconfig?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		},
		"./paths": {
			"require": "./dist/paths/index.js",
			"import": "./dist/paths/index.mjs",
			"types": "./dist/paths/index.d.ts"
		}
	},
	"scripts": {
		"lint": "eslint .",
		"build": "pkgroll --minify --target node12.20",
		"pretest": "npm run build",
		"test": "tsx tests"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run build && lint-staged && npm test"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint",
			"npm test"
		]
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.22.0",
		"@types/node": "^17.0.41",
		"es-jest": "^1.5.0",
		"eslint": "^8.17.0",
		"execa": "^6.1.0",
		"husky": "^4.3.8",
		"jsonc-parser": "^3.0.0",
		"lint-staged": "^13.0.0",
		"manten": "^0.1.0",
		"pkgroll": "^1.3.1",
		"slash": "^4.0.0",
		"tsx": "^3.4.2",
		"type-fest": "^2.13.0",
		"typescript": "^4.7.3"
	},
	"eslintConfig": {
		"extends": "@pvtnbr/eslint-config",
		"ignorePatterns": [
			"tests/fixtures"
		],
		"overrides": [
			{
				"files": "tests/**/*.ts",
				"rules": {
					"@typescript-eslint/no-shadow": [
						"error",
						{
							"allow": [
								"test",
								"describe"
							]
						}
					]
				}
			}
		]
	}
}
